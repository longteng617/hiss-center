<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.HissMapper">


    <select id="findUserListByIdsOrQuery" resultType="com.ruoyi.common.core.domain.entity.SysUser">
        select
        *
        from sys_user
        <where>
            <if test="ids!=null">
                and id in
                <foreach collection="ids" separator="," open="(" close=")" item="id">
                    #{id}
                </foreach>
            </if>
            <if test="query!=null">
                and nick_name like concat('%',#{query},'%')
            </if>
        </where>
    </select>
    <select id="findUserListByDeptId" resultType="com.ruoyi.common.core.domain.entity.SysUser">
        select
            *
        from sys_user where dept_id = #{deptId}
    </select>

</mapper>
